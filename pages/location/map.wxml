<!--pages/location/map.wxml-->
<map id="myMap" 
    longitude="113.324520" 
    latitude="23.099994" 
    scale="14" 
    controls="{{controls}}" 
    bindcontroltap="controltap"
    markers="{{markers}}" 
    bindmarkertap="markertap"
    polyline="{{polyline}}"
    bindregionchange="regionchange"
    show-location 
    style="width: 100%;height:90vh">
</map>
<view class="btn-area">
    <button bindtap="getCenterLocation" class="page-body-button" style='background-color: #5972C6' type="primary">获取位置</button>
</view>